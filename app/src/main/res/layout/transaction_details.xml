<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:textSize="15dp"
        android:id="@+id/titleTextView"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/customStyleColor"
        android:textColor="@color/ghostWhite"/>

    <EditText

        android:id="@+id/amountTextView"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="40dp"
        android:background="@color/customStyleColor"
        android:gravity="center"
        android:text="Amount"
        android:textColor="@color/ghostWhite"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <EditText
        android:textSize="15dp"
        android:id="@+id/dateTextView"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35dp"
        android:background="@color/customStyleColor"
        android:gravity="center"
        android:text="DateTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        android:textColor="@color/ghostWhite"/>

    <EditText
        android:textSize="15dp"
        android:id="@+id/typeTextView"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="TypeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateTextView"
        android:background="@color/customStyleColor"
        android:textColor="@color/ghostWhite"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:background="@color/customStyleColor"
        android:outlineAmbientShadowColor="@color/customStyleColor"
        android:outlineSpotShadowColor="@color/customStyleColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountTextView" />

    <EditText
        android:textSize="15dp"
        android:id="@+id/descriptionTextView"
        android:layout_width="286dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="8dp"
        android:background="@color/customStyleColor"
        android:text="Description "
        android:gravity="top|left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:textColor="@color/ghostWhite"/>

    <EditText
        android:textSize="15dp"
        android:id="@+id/endDateTextView"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35dp"
        android:background="@color/customStyleColor"
        android:gravity="center"
        android:text="EndDate"
        android:textColor="@color/ghostWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView" />

    <EditText
        android:textSize="15dp"
        android:id="@+id/intervalTextView"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="40dp"
        android:background="@color/customStyleColor"
        android:gravity="center"
        android:textColor="@color/ghostWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView"
        tools:text="Interval" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/saveBtnColor"
        android:shadowColor="@color/shadow"
        android:text="Save"
        android:textColor="@color/ghostWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endDateTextView" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="8dp"
        android:background="@color/deleteBtnColor"
        android:shadowColor="@color/shadow"
        android:text="Delete"
        android:textColor="@color/ghostWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intervalTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>