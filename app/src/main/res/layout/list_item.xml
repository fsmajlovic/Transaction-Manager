<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/transactionNameTextView"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginStart="0dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/transactionAmountTextView"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:foregroundGravity="center"/>

    <TextView
        android:id="@+id/transactionAmountTextView"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginStart="0dp"
        android:layout_toRightOf="@id/transactionNameTextView"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/transactionTypeImageView"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:foregroundGravity="center"/>

    <ImageView
        android:id="@+id/transactionTypeImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:gravity="left"
        android:foregroundGravity="left"
        android:textAlignment="gravity"/>

</androidx.constraintlayout.widget.ConstraintLayout>